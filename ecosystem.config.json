{
  "apps": [
    {
      "name": "aiclient-2-api",
      "script": "src/core/master.js",
      "cwd": "./",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000,
        "OAUTH_HOST": "your-public-ip-or-domain",
        "LOG_LEVEL": "info"
      },
      "env_file": ".env",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "out_file": "./logs/out.log",
      "error_file": "./logs/error.log",
      "log_file": "./logs/combined.log",
      "time": true,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "restart_delay": 1000,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}